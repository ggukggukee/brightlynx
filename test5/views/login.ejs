<% include partials/header %>

<div class="container">
    <h1 class="text-center py-5">Login</h1>
    <div class="card">
        <form action="/login" method="POST" class="px-3 py-3">
            <div class="form-group">
                <label for="exampleInputUsername12">Username</label>
                <input type="text" name="username" class="form-control" id="exampleInputUsername12" aria-describedby="usernameHelp12" placeholder="Enter username" required>
                <% if(error1 && error1.length > 0){ %>
                    <small id="usernameHelp12" class="form-text text-danger"><%= error1 %></small>
                <% } %>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword12">Password</label>
                <input type="password" name="password" class="form-control" id="exampleInputPassword12" aria-describedby="passwordHelp12" placeholder="Enter password" required>
                <% if(error2 && error2.length > 0){ %>
                    <small id="passwordHelp12" class="form-text text-danger"><%= error2 %></small>
                <% } %>
            </div>
            <button class="btn btn-primary" type="submit">Login</button>
        </form> 
    </div> 
</div>

<% include partials/footer %>