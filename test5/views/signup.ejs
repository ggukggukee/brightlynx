<% include partials/header %>

<div class="container">
    <h1 class="text-center py-5">Sign Up</h1>
    <div class="card">
        <form action="/signup" method="POST" class="px-3 py-3">
            <div class="form-group">
                <label for="exampleInputUsername1">Username</label>
                <input type="text" name="username" class="form-control" id="exampleInputUsername1" aria-describedby="usernameHelp" placeholder="Enter username" required>
                <% if(error && error.length > 0){ %>
                <small id="usernameHelp" class="form-text text-danger"><%= error %></small>
                <% } %>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="password" class="form-control" id="exampleInputPassword1" aria-describedby="passwordHelp" placeholder="Enter password" required>
                <small id="passwordHelp" class="form-text text-muted"></small>
            </div>
            <button class="btn btn-primary" type="submit">SignUp</button>
        </form> 
    </div> 
</div>


<% include partials/footer %>